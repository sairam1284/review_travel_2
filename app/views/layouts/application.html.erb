<!DOCTYPE html>
<html>
  <head>
    <title>ReviewTravel2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"></script>
  </head>

  <body>
  <div class="container">
    <div class="top-bar">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      
      <div class="top-left-logo">
        <%= image_tag("logo.jpeg", size: "50x80") %>
      </div>
    </div>
    <div class="top-bar">
      <div class="top-bar-left">
        <ul class="menu horizontal">
          <li class="nav"> <%= link_to 'About Us', root_path%></li>
          <li class="nav"> <%= link_to 'Trip List', root_path%></li>
          <% if !current_user.nil? %>
            <li class="nav"><%= link_to "Add New Trip", new_trip_path %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav">
            <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %> </li>
          <% else %>
            <li class="nav">
            <%= link_to('Sign In', new_user_session_path)  %>
            </li>
          <% end %>
          <li class="nav"> <%= link_to 'Sign Up', new_user_registration_path%></li>

        </ul>
      </div>
    </div>

    <%= yield %>
  </div>
  </body>
</html>
